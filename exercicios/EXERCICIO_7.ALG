algoritmo "exercicio_7"
var
   numero, dobro, terca_parte: real
inicio
   escreva("Digite um numero real: ")
   leia(numero)
   
   dobro <- numero * 2
   terca_parte <- numero / 3
   
   escreval("O dobro de", numero, " equivale a", dobro)
   escreval("A terca parte de", numero, " equivale a", terca_parte)
fimalgoritmo