algoritmo "exercicio_4"
var
   primeiroNumero, segundoNumero, soma: inteiro
inicio
   escreva("Digite o primeiro numero inteiro: ")
   leia(primeiroNumero)
   
   escreva("Digite o segundo numero inteiro: ")
   leia(segundoNumero)
   
   soma <- primeiroNumero + segundoNumero

   escreval(primeiroNumero, " +", segundoNumero, " =", soma)
fimalgoritmo