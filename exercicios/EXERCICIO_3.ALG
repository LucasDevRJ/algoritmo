algoritmo "exercicio_3"
var
   nome: caractere
   salario: real
inicio
   escreva("Digite o nome do(a) funcionario(a): ")
   leia(nome)
   
   escreva("Digite o salario do(a) ", nome, ": ")
   leia(salario)
   
   escreva("O(A) funcionario(a) ", nome, " tem um salario mensal de R$", salario, ".")
fimalgoritmo